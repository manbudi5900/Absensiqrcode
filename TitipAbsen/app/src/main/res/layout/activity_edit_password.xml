<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".edit_password">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="#fff" />

        <TextView
            android:id="@+id/profile"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_above="@id/linear"
            android:textColor="@color/fbutton_color_wet_asphalt"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:textSize="25dp"
            android:text="Update Password"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">



            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/passL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:fontFamily="sans-serif-light"
                    android:hint="Password"
                    android:textColorHint="#fff"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:inputType="text"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/passB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:backgroundTint="#fff"
                    android:fontFamily="sans-serif-light"
                    android:textColorHint="#fff"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_password_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/passBK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:backgroundTint="#fff"
                    android:fontFamily="sans-serif-light"
                    android:textColorHint="#fff"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/cerclebackgroundblue"
            android:padding="1dp"
            android:src="@drawable/edit"
            tools:srcCompat="@drawable/ubahkatasandi" />

        <Button
            android:id="@+id/saveP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/fbutton_color_green_sea"
            android:text="Ubah Password"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
